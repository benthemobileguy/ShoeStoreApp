<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- ConstraintLayout is used here to position the child views in a flexible and responsive way. -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="50dp"
        tools:context=".Instructions.InstructionsFragment">

        <TextView
            android:id="@+id/instructionTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/instructionTitle"
            android:textColor="@color/headerPurpleText"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/instructionsSecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/axiforma"
            android:gravity="center"
            android:text="@string/instructionsSecondaryText"
            android:textColor="@color/purpleText"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/instructionTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/instructionsShopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:background="@color/buttonColor"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="Shop now"
            android:textColor="@color/customWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/instructionsSecondaryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
