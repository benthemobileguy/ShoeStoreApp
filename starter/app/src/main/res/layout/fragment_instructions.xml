<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="50dp"
        tools:context=".Instructions.InstructionsFragment">

        <TextView
            android:id="@+id/instructionTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/instructionTitle"
            android:textColor="@color/headerPurpleText"
            android:textSize="30sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/instructionTitleText"
            android:padding="10dp"
            android:fontFamily="@font/axiforma"
            android:gravity="center"
            android:text="@string/instructionsSecondaryText"
            android:textColor="@color/purpleText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/instructionsShopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/inter_bold"
            android:background="@color/buttonColor"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:text="Shop now"
            android:textColor="@color/customWhite"
            android:textSize="16sp"
            android:textStyle="bold">

        </Button>
    </RelativeLayout>
</layout>